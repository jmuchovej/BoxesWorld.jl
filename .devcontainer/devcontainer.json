// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "BoxesWorld",
    "image": "quay.io/jupyter/datascience-notebook:2023-12-14",

	"hostRequirements": {
		"cpus": 2,
		"memory": "8gb",
		"storage": "32gb"
	},

	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": true,
			"installOhMyZsh": false,
			"configureZshAsDefaultShell": true,
			"upgradePackages": true,
			"username": "jovyan",
			//! Jupyter sets the user's group to `users` with GID 100, so this needs to
			//!   be something different to ensure that `common-utils` doesn't break
			"userGid": "1000",
		},
	},

	"mounts": [
		{
			"source": "${localWorkspaceFolder}/.devcontainer/startup.jl",
			"target": "/home/vscode/.julia/config/startup.jl",
			"type": "bind"
		},
	],

	"workspaceMount": "source=${localWorkspaceFolder},target=/bw,type=bind,consistency=cached",
	"workspaceFolder": "/bw",

	"customizations": {
		"vscode": {
			"settings": {
				"files.associations": {
					"*.jl": "julia",
				},
				"files.exclude": {
					"**/.git": true,
					"**/.DS_Store": true,
					"**/*.jl.cov": true,
					"**/*.jl.*.cov": true,
					"**/*.jl.mem": true,
				},
				// "julia.executablePath": "/home/vscode/.juliaup/bin/julia",
				"julia.plots.path": "/bw/plots/",
				"julia.persistentSession.shell": "/bin/zsh"
			},
			"extensions": [
				"julialang.language-julia",
				"aaron-bond.better-comments",
				"mikestead.dotenv",
				"ms-azuretools.vscode-docker",
				"redhat.vscode-yaml",
				"timonwong.shellcheck",
				"github.vscode-github-actions",
				"redhat.vscode-xml",
				"tamasfe.even-better-toml"
			]
		}
	},

	"containerEnv": {
		"JULIA_PROJECT": "/bw",
		"JULIA_NUM_THREADS": "auto",
		"DISPLAY": "host.docker.internal:0",
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "uname -a",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "vscode",

}
