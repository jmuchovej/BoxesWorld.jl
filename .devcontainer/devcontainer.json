// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "BoxWorld",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",

	"hostRequirements": {
		"cpus": 4,
		"memory": "16gb",
		"storage": "64gb"
	},

	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": true,
			"installOhMyZsh": false,
			"configureZshAsDefaultShell": true,
			"upgradePackages": true
		},
		"ghcr.io/julialang/devcontainer-features/julia:1": {
			"channel": "1.8",
		},
	},

	"mounts": [
		{
			"source": "${localWorkspaceFolder}/.devcontainer/startup.jl",
			"target": "/home/vscode/.julia/config/startup.jl",
			"type": "bind"
		}
	],

	"workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
	"workspaceFolder": "/workspace",

	"customizations": {
		"vscode": {
			"settings": {
				"files.associations": {
					"*.jl": "julia",
				},
				"julia.executablePath": "~/.juliaup/bin/julia",
				"julia.plots.path": "/BoxWorld.jl/plots/",
				"julia.persistentSession.shell": "/usr/bin/zsh"
			},
			"extensions": [
				"ms-toolsai.jupyter-renderers",
				"julialang.language-julia",
				"ms-toolsai.jupyter",
				"ms-toolsai.vscode-jupyter-cell-tags",
				"ms-python.python",
				"ms-toolsai.jupyter-keymap",
				"REditorSupport.r",
				"aaron-bond.better-comments",
				"mikestead.dotenv",
				"ronnidc.nunjucks",
				"ms-azuretools.vscode-docker",
				"redhat.vscode-yaml",
				"timonwong.shellcheck",
				"bungcip.better-toml",
				"quarto.quarto",
				"github.vscode-github-actions"
			]
		}
	},

	"containerEnv": {
		"JULIA_PROJECT": "/workspace",
		"JULIA_NUM_THREADS": "auto",
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "uname -a",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "vscode",

}
